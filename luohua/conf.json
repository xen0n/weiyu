{
  "site": {
    "$$nodup": true,
    "routing": [
      "exact",
      ["/static/", [
        "regex",
        ["^(?P<path>.*)$", "staticfile", null]
        ], null],
      ["/api/", [
        "exact",
        ["sec/", [
          "regex",
          ["^$", "section_list", {"render_in": "json"}],
          ["^(?P<sec_id>[0-9A-Za-z])/$", "section", {"render_in": "json"}]
          ], null],
        ["hot/", [
          "regex",
          ["^$", "hot-global", {"render_in": "json}],
          ["^sec/(?P<sec_id>[0-9A-Za-z])/$", "hot-section", {"render_in": "json"}],
          ["^board/(?P<board>[0-9A-Za-z._]+)/$", "hot-board", {"render_in": "json"}]
          ], null]
        ], null],
      ["/", [
        "regex",
        ["^$", "index", {"render_in": "mako"}],
        ["^sec/", [
          "regex",
          ["^$", "section_list", {"render_in": "mako"}],
          ["^(?P<sec_id>[0-9A-Za-z])/$", "section", {"render_in": "mako"}]
          ], null]
        ], null]
      ],
    "session": {
      "backend": "beaker",
      "options": {
        "session.type": "file",
        "session.data_dir": "/tmp/beaker/data",
        "session.lock_dir": "/tmp/beaker/lock",
        "session.key": "weiyu.session",
        "session.secret": "placeholder",
        "session.timeout": 300
        }
      },
    "staticfile": {
      "root": "./static/"
      }
     },
  "weiyu.rendering": {
    "mako": {
      "directories": ["./templates"],
      "module_dir": "/tmp/mako-modules"
    }
  },
  "weiyu.db": {
    "databases": {
      "bbs": {
        "driver": "pymongo",
        "options": {
          "host": "127.0.0.1",
          "port": 27017,
          "is_replica": false,
          "path": "bbs"
        }
      }
    }
  },
  "weiyu.db.mapper": {
    "storage": {
    }
  }
}
